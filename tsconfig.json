{
  "compilerOptions": {
    "baseUrl": "./src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "noImplicitThis": true,
    "outDir": "dist",
    "paths": {
      "@/*": ["*"],
      "config": ["../config/index.ts"]
    },
    "target": "es6"
  },
  "include": [
    "src/**/*", "config/**/*"
  ],
  "exclude": ["node_modules", "dist", "packs"]
}
