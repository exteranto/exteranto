{
  "name": "Exteranto Skeleton",
  "author": "...",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "...",
  "icons": {
    "128": "static/logo.png"
  },
  "browser_action": {
    "default_icon": "static/logo.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["dist/content.js"]
    }
  ],
  "background": {
    "scripts": ["dist/background.js"]
  },
  "permissions": [
    "activeTab",
    "background",
    "cookies",
    "storage",
    "tabs",
    "unlimitedStorage",
    "webRequest"
  ],
  "safari": {
    "bundle_id": "...",
    "developer_id": "...",
    "update_manifest_url": "..."
  }
}
