{
  "name": "Demo Ext",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "...",
  "icons": {
    "128": "static/logo.png"
  },
  "browser_action": {
    "default_icon": "static/logo.png",
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["dist/content.js"]
    }
  ],
  "background": {
    "scripts": ["dist/background.js"]
  },
  "sandbox": {
     "pages": ["sandbox.html"]
  },
  "permissions": [
    "background",
    "storage",
    "tabs"
  ]
}
